{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "compilerOptions": {
    // "noEmit": false,
    // "emitDeclarationOnly": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "declarationDir": "./types",

    "module": "ESNext",
    // "module": "nodenext",
    "moduleResolution": "Bundler",
    // "moduleResolution": "nodenext",
    "types": ["node"],
    "target": "esnext"
  }
}
